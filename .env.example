# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=starkpulse
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Authentication
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1d

# Session
JWT_ACCESS_TOKEN_EXPIRES_IN=1d
JWT_REFRESH_TOKEN_EXPIRES_IN=3d

# Crypto API Keys
COIN_MARKET_CAP_API_KEY=your-coinmarketcap-api-key
COIN_GECKO_API_KEY=your-coingecko-api-key

# For sms
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE="Too many requests, please try again later."

# Global Rate Limits
GLOBAL_RATE_LIMIT_WINDOW_MS=60000
GLOBAL_RATE_LIMIT_MAX=10000

# Per-User Rate Limits
USER_RATE_LIMIT_WINDOW_MS=60000
USER_RATE_LIMIT_MAX=100

# Per-IP Rate Limits
IP_RATE_LIMIT_WINDOW_MS=60000
IP_RATE_LIMIT_MAX=50

# Trusted Users
TRUSTED_USER_IDS=1,2,3
TRUSTED_ROLES=admin,moderator
TRUSTED_IPS=127.0.0.1,::1
TRUSTED_BYPASS_FACTOR=10

# Storage Configuration
RATE_LIMIT_STORE_TYPE=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_RATE_LIMIT_DB=1

# Strategy
RATE_LIMIT_STRATEGY=fixed-window

# Monitoring
RATE_LIMIT_MONITORING_ENABLED=true
RATE_LIMIT_ALERT_THRESHOLD=0.8
RATE_LIMIT_LOG_LEVEL=warn
